<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DeptSerlvet</servlet-name>
        <servlet-class>com.school.software.oa.serlvet.DeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptSerlvet</servlet-name>
        <url-pattern>/dept/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDeptServlet</servlet-name>
        <servlet-class>com.school.software.oa.serlvet.AddDeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDeptServlet</servlet-name>
        <url-pattern>/dept/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.school.software.oa.serlvet.UpdateSerlvet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/dept/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>com.school.software.oa.serlvet.DetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/dept/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.school.software.oa.serlvet.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/dept/delete</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>